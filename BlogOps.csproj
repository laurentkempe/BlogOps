<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>

    <PackAsTool>true</PackAsTool>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageVersion>1.0.1</PackageVersion>
    <Title>BlogOps</Title>
    <Authors>Laurent Kempé</Authors>
    <Description>Tool to operate my blog at https://laurentkempe.com/.</Description>
    <Copyright>Laurent Kempé</Copyright>
    <PackageProjectUrl>https://github.com/laurentkempe/BlogOps</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/laurentkempe/BlogOps#license</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/laurentkempe/BlogOps</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CliFx" Version="1.6.0" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.3.0" />
    <PackageReference Include="Markdig" Version="0.23.0" />
    <PackageReference Include="SimpleExec" Version="6.4.0" />
    <PackageReference Include="Spectre.Console" Version="0.37.0" />
    <PackageReference Include="YamlDotNet" Version="9.1.4" />
  </ItemGroup>

</Project>
